{
  "name": "uzume",
  "version": "0.0.6",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint --fix './src/**/*.ts'",
    "lint-fix": "eslint --fix './src/**/*.ts' && prettier --write './src/**/*.ts'",
    "start": "run-s clean transpile-dev serve",
    "deploy-mac": "run-s clean transpile-prd build-mac-publish",
    "deploy-win": "run-s clean transpile-prd build-win-publish",
    "clean": "rimraf dist",
    "serve": "electron .",
    "transpile-dev": "cross-env NODE_ENV=\"development\" webpack --progress",
    "transpile-prd": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "build-mac-publish": "electron-builder --mac --x64 --publish always",
    "build-win-publish": "electron-builder --win --x64 --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "link.amanoiwato.uzume",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "./assets/mac/uzume-app-icon.icns",
      "target": [
        "dmg"
      ],
      "publish": {
        "provider": "s3",
        "bucket": "uzume-prod",
        "region": "ap-northeast-1",
        "path": "deploy/frontend/darwin/"
      }
    },
    "win": {
      "icon": "./assets/win/uzume-app-icon.ico",
      "target": "nsis",
      "publish": {
        "provider": "s3",
        "bucket": "uzume-prod",
        "region": "ap-northeast-1",
        "path": "deploy/frontend/win32/"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "sign": false
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.21.0",
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-modal": "^3.13.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "dotenv": "^9.0.2",
    "electron": "^18.0.0",
    "electron-builder": "^23.0.0",
    "electron-notarize": "^1.2.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "grunt-electron-installer": "^2.1.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.21.0",
    "playwright-fake-dialog": "^0.2.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.39.2",
    "sass-loader": "^12.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "form-data": "^4.0.0",
    "jquery": "^3.6.0",
    "jquery-ui": "^1.12.1",
    "react": "^17.0.2",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.4",
    "update-electron-app": "^2.0.1",
    "uzume-backend-connector": "github:Saigo1997/uzume-backend-connector"
  }
}
