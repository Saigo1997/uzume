{
  "name": "uzume",
  "version": "0.2.2",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint --fix './src/**/*.{ts,tsx}'",
    "lint-fix": "eslint --fix './src/**/*.{ts,tsx}' && prettier --write './src/**/*.{ts,tsx}'",
    "start": "run-s clean transpile-dev serve",
    "deploy-mac": "run-s clean transpile-prd build-mac-publish",
    "deploy-win": "run-s clean transpile-prd build-win-publish",
    "clean": "rimraf dist",
    "serve": "electron .",
    "transpile-dev": "cross-env NODE_ENV=\"development\" webpack --progress",
    "transpile-prd": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "build-mac-publish": "electron-builder --mac --x64 --publish always",
    "build-win-publish": "electron-builder --win --x64 --publish always",
    "generate-notice": "node ./scripts/generate_notice.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "link.amanoiwato.uzume",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "./assets/mac/uzume-app-icon.icns",
      "target": [
        "dmg"
      ],
      "publish": {
        "provider": "s3",
        "bucket": "uzume-prod",
        "region": "ap-northeast-1",
        "path": "deploy/frontend/darwin/"
      }
    },
    "win": {
      "icon": "./assets/win/uzume-app-icon.ico",
      "target": "nsis",
      "publish": {
        "provider": "s3",
        "bucket": "uzume-prod",
        "region": "ap-northeast-1",
        "path": "deploy/frontend/win32/"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "sign": false
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/mini-css-extract-plugin": "^2.5.0",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "axios": "^1.6.8",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.1",
    "dotenv": "^16.4.5",
    "electron": "^30.0.3",
    "electron-builder": "^24.13.3",
    "electron-notarize": "^1.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "grunt-electron-installer": "^2.1.0",
    "html-webpack-plugin": "^5.6.0",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.44.0",
    "playwright-fake-dialog": "^0.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.77.0",
    "sass-loader": "^14.2.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "electron-log": "^5.1.4",
    "electron-store": "^8.2.0",
    "form-data": "^4.0.0",
    "jquery": "^3.7.1",
    "jquery-ui": "^1.13.3",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-modal": "^3.16.1",
    "recoil": "^0.7.7",
    "update-electron-app": "^3.0.0",
    "use-memo-one": "^1.1.3",
    "uzume-backend-connector": "github:Saigo1997/uzume-backend-connector"
  }
}
